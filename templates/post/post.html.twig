<div class="media text-muted pt-3">
    <img data-src="holder.js/32x32?text={{ post.user.username|first|upper }}&bg=e83e8c&fg=fff&size=8" alt="img" class="mr-2 ml-2 img-thumbnail img-fluid">
    <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-grey">
        <span class="d-block">
            <a href="{{ path('post_user', {'username': post.user.username}) }}"><strong class="text-dark-grey">{{ post.user.fullName }}</strong> </a><span>{{ post.createdAt| date('d.m.Y') }}</span>
        </span>
        {{ post.text }}
    </p>
</div>